<li aria-disabled={{onFirstPage}} class="arrow {{if onFirstPage 'unavailable'}}">
  <a {{action "previousPage"}}>&laquo;</a>
</li>

{{#each pages as |page|}}
  <li class="{{if page.current 'current'}}">
    <a {{action "changePage" page.number}}>{{page.number}}</a>
  </li>
{{/each}}

<li aria-disabled={{onLastPage}} class="arrow {{if onLastPage 'unavailable'}}">
  <a {{action "nextPage"}}>&raquo;</a>
</li>
